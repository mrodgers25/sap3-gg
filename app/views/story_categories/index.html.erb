<h1>Listing story_categories</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @story_categories.each do |story_category| %>
      <tr>
        <td><%= story_category.code %></td>
        <td><%= story_category.name %></td>
        <td><%= link_to 'Show', story_category %></td>
        <td><%= link_to 'Edit', edit_story_category_path(story_category) %></td>
        <td><%= link_to 'Destroy', story_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story Category', new_story_category_path %>
