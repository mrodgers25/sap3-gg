<div class="container-fluid d-flex justify-content-center align-items-center">
  <div class="jumbotron bg-white user-edit">
    <div class="header text-center">
      <%= image_pack_tag "sap-logo.png", id: "logo", class: "m-auto" %>
    </div>

    <hr class="my-4">

    <div class="body">
      <p class="lead text-center">Edit Your Information</p>

      <%= form_for(@user, url: user_path(@user), method: :patch) do |f| %>
        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :first_name, "First Name:" %>
          <%= f.text_field :first_name, required: true, maxlength: 20, autofocus: true, placeholder: "John", class: "form-control" %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :last_name, "Last Name:" %>
          <%= f.text_field :last_name, required: false, maxlength: 20, placeholder: "Doe", class: "form-control" %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :email, "Email:" %>
          <%= f.text_field :email, required: true, maxlength: 60, placeholder: "john_doe@email.com", class: "form-control" %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :city_preference, 'Cities:' %>
          <%= f.text_area :city_preference, cols: 80, placeholder: "City1, City2, City3, etc", class: "form-control" %>
          <small class="form-text text-muted">
            Which cities or metro areas do you want us to cover for you?<br>
            This will help you to filter stories by your preferencial metropolitan areas.<br>
          </small>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :password, 'Password:' %>
          <%= f.password_field :password, required: true, class: "form-control"%>
          <small class="form-text text-muted">Make it strong!</small>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, 'Password Confirmation:' %>
          <%= f.password_field :password_confirmation, class: "form-control" %>
        </div>

        <hr class="my-4">

        <div class="sign-in-row mt-4 mx-auto text-center">
          <%= f.submit "Update", class: "btn btn-primary w-50" %>
        </div>
      <% end %>

      <hr class="my-4">

      <div class="sign-in-row mt-4 mx-auto text-center">
        <%= link_to 'Cancel Account', registration_path(@user), method: :delete, data: { confirm: "Are you sure you want to cancel your account?" }, class: "text-muted" %>
      </div>
    </div>
  </div>
</div>
