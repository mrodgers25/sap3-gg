<div class="container-fluid">
  <div class="header text-center">
    <h4><i class="fas fa-book mr-1"></i> Review Video Story</h4>
  </div>
  <div class="grid story-grid">
    <div class="grid-sizer"></div>
    <div class="gutter-sizer"></div>
      <div class="grid-item grid-card card">
        <%= get_video_iframe(@video_story.urls.first.url_full, "100%", '200px') %>
        <div class="card-body">
          <div class="tagline-div-<%= @video_story.id %>">
            <% if @video_story.editor_tagline %>
              <h6 class="card-title text-center font-italic font-bold"><%= @video_story.editor_tagline %></h6>
            <% end %>
          </div>

          <hr>

          <h5 class="text-center story-title"><%= link_to @video_story.title, @video_story.urls.last.url_full, target: '_blank', class: 'text-dark' %></h5>

          <p class="url-desc">
            <%= truncate(@video_story.latest_url.url_desc, length: @video_story.desc_length, omission: '...  ' ) { link_to "Read more", admin_video_story_path(@video_story.id), target: '_blank', class: 'read-more-link' } %>
          </p>

          <hr>

        </div>
      </div>
      <div class="grid-item grid-card card">
        <div class="card-body">
            <div class="header text-center">
              <h4>Modify Story</h4>
            </div>

            <hr class="my-4">

            <div class="body">
              <%= form_with(model: @video_story, url: review_update_admin_video_story_path(@video_story)) do |f| %>
                <div class="form-group my-4 max-vw-80 mx-auto">
                  <%= f.label :desc_length, "Description Length:" %>
                  <%= f.number_field :desc_length, value: @video_story.desc_length, class: 'form-control' %>
                </div>

                <div class="sign-in-row mt-4 mx-auto text-center">
                  <%= submit_tag "Submit", class: "w-100 btn btn-sm btn-primary" %>
                </div>
              <% end %>

              <hr class="my-4">

              <%= link_to edit_admin_video_story_path(@video_story), class: "w-100 btn btn-sm btn-warning" do %>
                <i class="fas fa-edit mr-1"></i> More Fields to Edit
              <% end %>
            </div>
        </div>
      </div>
      <div class="grid-item grid-card card">
        <div class="card-body">
          <div class="header text-center">
            <h4>Choose Story State</h4>
          </div>

          <hr class="my-4">
          <p class="lead text-center">Current Story State: <br><strong><%= @video_story.state.titleize %></strong></p>


          <div class="body text-center">
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_video_story_path(@video_story, state: 'no_status'), method: :patch, class: "w-100 btn btn-sm btn-secondary" do %>
                <i class="fas fa-square mr-1"></i> No Status
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_video_story_path(@video_story, state: 'completed'), method: :patch, class: "w-100 btn btn-sm btn-success" do %>
                <i class="fas fa-check mr-1"></i> Story Complete
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_video_story_path(@video_story, state: 'needs_review'), method: :patch, class: "w-100 btn btn-sm btn-info" do %>
                <i class="fas fa-search mr-1"></i> Needs Review
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_video_story_path(@video_story, state: 'do_not_publish'), method: :patch, class: "w-100 btn btn-sm btn-warning" do %>
                <i class="fas fa-pause mr-1"></i> Do Not Publish
              <% end %>
            </div>
            <div class="form-group my-4 mx-auto">
              <%= button_to update_state_admin_video_story_path(@video_story, state: 'removed_from_public'), method: :patch, data: { confirm: 'Are you sure?' }, class: "w-100 btn btn-sm btn-danger" do %>
                <i class="fas fa-times mr-1"></i> Removed From Public
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
