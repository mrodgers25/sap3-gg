<%= form_tag(filter_path, method: :get) do %>
  <div class="row filters">
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-0">
      <%= text_field_tag :url_title, params[:url_title], placeholder: 'Search Title...', maxlength: 100, size: 100, class: "form-control form-control-sm search-field" %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-0">
      <%= text_field_tag :url_desc, params[:url_desc], placeholder: 'Search Description...', maxlength: 100, size: 100, class: "form-control form-control-sm search-field" %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-0">
      <%=
        select_tag :story_type,
        options_from_collection_for_select(['MediaStory', 'VideoStory', 'CustomStory'], 'to_s', 'to_s', params[:publishable_type]),
        include_blank: 'All Story Types',
        class: 'form-control form-control-sm',
        id: 'story-type-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-0">
      <%=
        select_tag :story_region_id,
        options_from_collection_for_select(@story_regions, 'id', 'name', params[:story_region_id]),
        prompt: 'All Story Regions',
        class: 'form-control form-control-sm',
        id: 'story-region-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-1">
      <%=
        select_tag :place_grouping_id,
        options_from_collection_for_select(@place_groupings, 'id', 'name', params[:place_grouping_id]),
        prompt: 'All Place Types',
        class: 'form-control form-control-sm',
        id: 'place-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-1">
      <%=
        select_tag :story_category_id,
        options_from_collection_for_select(@story_categories, 'id', 'name', params[:story_category_id]),
        prompt: 'All Story Categories',
        class: 'form-control form-control-sm',
        id: 'category-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-3 mt-1 mt-md-1">
      <%= submit_tag "Filter", class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
<% end %>
