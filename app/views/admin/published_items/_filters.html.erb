<%= form_tag(filter_path, method: :get) do %>
  <div class="row filters">
    <div class="col-12 col-sm-6 col-md-4 mt-1 mt-md-0">
      <%=
        select_tag :published_state,
        options_from_collection_for_select(Story.published_states, 'to_s', 'titleize', params[:published_state]),
        prompt: 'All Published States',
        class: 'form-control form-control-sm',
        id: 'state-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-4 mt-1 mt-md-0">
      <%=
        select_tag :order_by,
        options_from_collection_for_select(['position ASC', 'position DESC', 'created_at ASC', 'created_at DESC', 'publish_at ASC', 'publish_at DESC', 'unpublish_at ASC', 'unpublish_at DESC'], 'to_s', 'to_s', params[:order_by]),
        prompt: 'Select Sort',
        class: 'form-control form-control-sm',
        id: 'order-by-select'
      %>
    </div>
    <div class="col-12 col-sm-6 col-md-4 mt-1 mt-md-0">
      <%= submit_tag "Filter", class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
<% end %>
