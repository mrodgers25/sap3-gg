<div class="container-fluid">
  <div class="jumbotron bg-white admin-stories admin-index-page">
    <div class="header text-center">
      <h4><i class="fas fa-sort-numeric-down mr-1"></i> Publishing Queue</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'queue_filters', locals: { filter_path: queue_admin_published_items_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Title</th>
            <th scope="col">Queue Position</th>
            <th scope="col">Display Position</th>
            <th scope="col">Pinned?</th>
            <th scope="col">Unpublish At</th>
            <th scope="col">Published Count</th>
            <th scope="col">Displaying Date</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% publish_day_count = 1 %>
          <% @published_items.each_with_index do |published_item, index| %>
            <tr>
              <td style="width: 600px;"><%= published_item.publishable.latest_url&.url_title %></td>
              <td><%= published_item.queue_position || '-' %></td>
              <td><%= published_item.position || '-' %></td>
              <td><%= human_bool(published_item.pinned) %></td>
              <td><%= published_item.unpublish_at&.strftime("%m/%d/%Y -  %I:%M %p")  || '-' %></td>
              <td><%= published_item.publishable.published_count %></td>
              <td><%= (Time.zone.now + publish_day_count.day).beginning_of_day.strftime("%m/%d/%Y") %></td>
              <td style="width: 100px;">
                <%= link_to queue_edit_admin_published_item_path(published_item), class: "btn btn-sm btn-outline-secondary m-1 w-100" do %>
                  <i class="fas fa-edit mr-1"></i> Edit
                <% end %>
                <%= button_to display_admin_published_item_path(published_item), class: "btn btn-sm btn-outline-success m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-upload mr-1"></i> Display Now
                <% end %>
                <%= button_to unpublish_admin_published_item_path(published_item), class: "btn btn-sm btn-outline-danger m-1 w-100", data: { confirm: 'Are you sure?' } do %>
                  <i class="fas fa-times mr-1"></i> Unpublish
                <% end %>
              </td>
            </tr>

            <% publish_day_count += 1 if (index % PublishedItem.publish_rate) == (PublishedItem.publish_rate - 1) %>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
