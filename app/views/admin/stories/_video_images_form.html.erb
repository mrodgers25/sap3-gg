<div class="container-fluid">
  <%= render partial: 'shared/admin/form_tabs', locals: { story: @story }%>
  <%= form_with(model: @story, url: route, method: method) do |f| %>
  <%= render partial: 'shared/story_id_header', locals: { story: @story, icon: story_icon(@story), title: 'Add Places' }%>

      <hr class="my-4">

      <% if @story.errors.any? %>
        <div id="error_explanation">
          <h5><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h5>
          <ul>
            <% @story.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="body">
        <%= f.fields_for :urls do |u| %>
          <%= u.fields_for :images do |i| %>
            <div class="form-group row">
              <div class="col-2">
                <%= i.label :src_url, "Thumbnail Image URL:" %>
              </div>
              <div class="col-10">
                <%= i.text_field :src_url, class: "form-control form-control-sm" %>
              </div>
            </div>
          <% end %>
        <% end %>

        <hr class="my-4">

        <div class="d-flex justify-start">
          <%= f.submit "Save & Exit", class: "btn btn-sm btn-success mr-4" %>
          <%= f.submit "Save & New", class: "btn btn-sm btn-success mr-4" %>
          <%= f.submit "Next", class: "btn btn-sm btn-primary mr-4" %>
          <br>
        </div>

      </div>
  <% end %>
</div>
