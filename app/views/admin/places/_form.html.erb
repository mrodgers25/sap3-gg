<%= form_for([:admin, @place]) do |f| %>
  <div class="jumbotron bg-white admin-form">
    <div class="header text-center">
      <h4><i class="fas fa-map-marker-alt mr-1"></i> Add Place</h4>
    </div>

    <hr class="my-4">

    <div class="body">

      <% if params[:story] %>
        <%= f.hidden_field :story_id, value: params[:story] %>
      <% end %>

      <div class="form-group my-4 max-vw-80 mx-auto">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
        <%= f.label "Status" %><br>
        <%= f.collection_select(:place_status_option_id, PlaceStatusOption.order(:id), :id, :name, :prompt => true, class: "form-control") %>
      </div>

       <%= f.fields_for :address do |a| %>
        <%= render 'admin/addresses/fields', f: a %>
      <% end %>

      <div class="actions">
        <%= f.submit "Save", class: 'btn btn-md btn-primary text-center w-100' %>
      </div>
    </div>

  </div>
<% end %>