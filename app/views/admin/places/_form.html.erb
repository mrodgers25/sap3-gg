<%= form_for([:admin, @place]) do |f| %>
  <div class="jumbotron bg-white admin-form">
    <div class="header text-center">
      <h4><i class="fas fa-map-marker-alt mr-1"></i> Add Place</h4>
    </div>

    <hr class="my-4">

    <div class="body">

      <% if params[:story_id] %>
        <%= f.hidden_field :story_id, value: params[:story_id] %>
      <% end %>

      <div class="form-group my-4 max-vw-80 mx-auto">
        <%= f.label "Status" %><br>
        <%= f.collection_select(:place_status_option_id, PlaceStatusOption.order(:id), :id, :name, :prompt => true, class: "form-control") %>
      </div>

      <div class="form-group my-4 max-vw-80 mx-auto">
        <%= f.label :name %><br>
        <%= f.text_field :name, class: "form-control" %>
      </div>

         <div class="form-group my-4 max-vw-80 mx-auto">
          <label>Select a category:</label>
          <select id="category-roots">
            <option value="">- Please Select -</option>
            <% Category.places.roots.each do |c| %>
              <option value="<%= c.id %>"><%= c.name %></option>
            <% end %>
          </select>
         </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <select id="second-level-categories">
           <option value="">- Please Select -</option>
          </select>
         </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <select id="third-level-categories">
            <option value="">- Please Select -</option>
          </select>
        </div>

        Selected Category: <span id="selected-name"></span><br>
    
      <%= f.hidden_field :category_id, id: "selected-id", value: "" %>

       <%= f.fields_for :location do |a| %>
        <%= render 'admin/locations/fields', f: a %>
      <% end %>

      <div class="actions">
        <%= f.submit "Save", class: 'btn btn-md btn-primary text-center w-100' %>
      </div>
    </div>

  </div>
<% end %>