<%= form_tag(filter_path, method: :get) do %>
  <div class="row filters">
    <div class="col-12 col-sm-4 mt-1 mt-sm-0">
      <%= text_field_tag :name, params[:name], placeholder: 'Search Name...', maxlength: 100, size: 100, class: "form-control form-control-sm search-field" %>
    </div>
    <div class="col-12 col-sm-4 mt-1 mt-sm-0">
      <%= text_field_tag :code, params[:code], placeholder: 'Search Code...', maxlength: 100, size: 100, class: "form-control form-control-sm search-field" %>
    </div>
    <div class="col-12 col-sm-4 mt-1 mt-sm-0">
      <%= submit_tag "Filter", class: 'btn btn-sm btn-secondary' %>
    </div>
  </div>
<% end %>
