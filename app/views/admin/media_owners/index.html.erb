<div class="container-fluid">
  <div class="links mb-2 text-right">
    <%= link_to new_admin_media_owner_path, class: "btn btn-sm btn-success" do %>
      <i class="fas fa-upload mr-1"></i> Upload Media Owners
    <% end %>
  </div>
  <div class="jumbotron bg-white admin-index-page">
    <div class="header text-center">
      <h4><i class="fas fa-address-card mr-1"></i> Media Owners</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: admin_media_owners_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Id</th>
            <th scope="col">Title</th>
            <th scope="col">Url Domain</th>
            <th scope="col">Created At</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @owners.each do |owner| %>
            <tr>
              <td><%= owner.id %></td>
              <td><%= owner.title %></td>
              <td><%= owner.url_domain %></td>
              <td><%= pretty_date_format(owner.created_at) %></td>
              <td class="action-links">
                <%= link_to edit_admin_media_owner_path(owner), class: "btn btn-sm btn-outline-warning" do %>
                  <i class="fas fa-edit"></i>
                <% end %>
                <%= link_to admin_media_owner_path(owner), method: :delete, class: "btn btn-sm btn-outline-danger delete-link", data: { confirm: 'Are you sure?' }, target: '_blank' do %>
                  <i class="fas fa-times"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <hr class="my-4">

    <div class='pagination'>
      <%== pagy_bootstrap_nav(@pagy) %>
    </div>
  </div>
</div>
