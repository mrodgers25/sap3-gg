<div class="container">
  <%= form_for(@published_item, url: queue_update_admin_published_item_path(@published_item)) do |f| %>
    <div class="jumbotron bg-white admin-form">
      <div class="header text-center">
        <h4><i class="fas fa-sort-numeric-down mr-1"></i> Edit Queued Item</h4>
      </div>

      <hr class="my-4">

      <div class="body">
        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :queue_position %><br>
          <%= f.number_field :queue_position, class: "form-control" %>
          <%= f.hidden_field :old_queue_position, value: @published_item.queue_position %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :position, 'Display position' %><br>
          <%= f.number_field :position, class: "form-control" %>
          <%= f.hidden_field :old_position, value: @published_item.position %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :unpublish_at %><br>
          <%= f.datetime_field :unpublish_at, class: "form-control" %>
        </div>

        <div class="form-group my-4 max-vw-80 mx-auto">
          <%= f.label :pinned %><br>
          <%= f.check_box :pinned %>
        </div>

        <hr class="my-4">

        <div class="actions">
          <%= f.submit "Save", class: 'btn btn-md btn-primary text-center w-100' %>
        </div>
      </div>
    </div>
  <% end %>
</div>
