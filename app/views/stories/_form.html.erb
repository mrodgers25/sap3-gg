<%= form_for @story do |f| %>
  <br>
    <!-- TODO: you needs to test for errors from the nested URLs also -->
    <% if @story.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@story.errors.count, "error") %> prohibited this story from being saved:</h2>
          <ul>
            <% @story.errors.each_with_index do |message, i| %>
                <li><%= message[1] %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <%= f.fields_for :urls do |u| %>

        <div class="form-group" style="margin-top: .5%">
          <div class="panel panel-default">
            <div class="panel-body">
              <table class="table-responsive table-condensed">
                <tr>
                  <td>Page URL</td>
                  <td><%= u.text_field :url_full, :value => @source_url_pre, :readonly => true, :size => 100 %></td>
                  <td></td>
                </tr>
                <tr>
                  <td>Domain</td>
                  <td><%= u.text_field :url_domain, :value => @base_domain, :readonly => true, :size => 25 %>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                    <%= text_field_tag 'name_display', @name_display, :readonly => true, size: 45 %>
                    &nbsp;&nbsp;URL Type &nbsp;&nbsp;
                    <%= u.select :url_type, ["Media"] %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="<%= "#{@title_complete}" %>" >URL Title</td>
                  <td><%= u.text_area :url_title, rows: 2, :value => @title, :maxlength => 250, style:"width: 825px" %></td>
                  <td></td>
                </tr>
                <tr>
                  <td class="<%= "#{@desc_complete}" %>" >URL Desc</td>
                  <td><%= u.text_area :url_desc, rows: 3, :value => @meta_desc, :maxlength => 1000, style:"width: 825px" %>
                  </td>
                  <td></td>
                </tr>
                <tr>
                  <td>URL Keywords</td>
                  <td><%= u.text_area :url_keywords, rows: 1, :value => @meta_keywords, :maxlength => 1000, style:"width: 825px" %></td>
                  <td></td>
                </tr>
                <%= u.hidden_field :raw_url_title_scrape, :value => @title %>
                <%= u.hidden_field :raw_url_desc_scrape, :value => @meta_desc %>
                <%= u.hidden_field :raw_url_keywords_scrape, :value => @meta_keywords %>
              </table>
            </div></div>
        </div>

        <%= u.fields_for :images do |i| %>
            <div class="form-group">
              <div class="panel panel-default">
                <div class="panel-body">
                  <div class="container-fluid">

                    <% unless @image1 %>
                      <strong>Choose an Image</strong><br><br>
                    <% end %>

                  <% if params[:action] != "edit" %>

                      <% unless @page_imgs.nil? %>  <!-- display scraped images -->
                          <% @page_imgs.each_with_index do |hash, idx| %>
                              <div class="row">
                                <% unless @image1 %>
                                  <div class="col-lg-1 text-right">
                                    <%= i.radio_button :image_data, hash.to_json %>
                                    <%= hidden_field_tag "image_src_cache[#{idx}]", hash['src_url'] %>
                                    <%= hidden_field_tag "image_alt_text_cache[#{idx}]", hash['alt_text'] %>
                                  </div>
                                <% end %>
                                <div class="col-md-2">
                                  <%= i.label( :src_url, hash["alt_text"], :style => "font-weight:normal") %><br>
                                  <% size = hash["image_width"].to_s + " x " + hash["image_height"].to_s %>Size:
                                  <%= i.label( :src_url, size, :style => "font-weight:normal") %>
                                </div>
                                <div class="col-md-2">
                                  <%= image_tag(hash["src_url"], width: "250") %><br>
                                </div>
                              </div>
                          <% end %>
                      <% end %>

                      <% unless @image1 %>   <!-- display prompt for manual image --->
                          <div class="row-fluid"  style="border-top: 1px solid #BABFBA"><br>
                            <div class="col-md-1">
                              <%= i.label( :manual_url, "or Enter Manually") %>
                            </div>
                            <div class="col-md-1 text-right">
                              URL<br><br>
                            </div>
                            <div class="col-md-10 text-left">
                              <%= text_area_tag :manual_url, nil, cols: 80 %><br>
                            </div><br>
                          </div>
	                        <div class="col-md-1">
	                          <%= i.label( :image_width, "(min 350px)") %>
	                        </div>
                        <div class="row-fluid">
                            <div class="col-md-1 text-right">
                              Width<br><br>
                            </div>
                            <div class="col-md-4 text-left">
                              <%= i.text_field :image_width %>&nbsp;&nbsp;&nbsp;&nbsp;Height&nbsp;&nbsp;
                              <%= i.text_field :image_height %><br>
                            </div>
                          </div>
                      <% end %>

                  <% else %>

                        <div class="row-fluid"><br> <!-- display db values on edit -->
                          <div class="col-md-1">
                          </div>
                          <div class="col-md-1 text-right">
                            URL<br><br>
                          </div>
                          <div class="col-md-10 text-left">
                            <%= i.text_area :src_url, :cols => 80 %><br>
                          </div><br>
                        </div>
                        <div class="row-fluid">
                          <div class="col-md-2 text-right">
                            Width<br><br>
                          </div>
                          <div class="col-md-4 text-left">
                            <%= i.text_field :image_width %>&nbsp;&nbsp;&nbsp;&nbsp;Height&nbsp;&nbsp;
                            <%= i.text_field :image_height %><br>
                          </div>
                        </div>

                    <% end %>

                  </div>
                </div></div>
            </div>

        <% end %>
    <% end %>

    <div class="panel panel-default">
      <div class="panel-body">
        <table class="table-responsive table-condensed">
          <tr>
            <td class="<%= "#{@tagline_complete}" %>" >Editor Tagline </td>
            <td>  <%= f.text_field :editor_tagline, :value => @meta_tagline, :placeholder => "Maximum 60 chars", :maxlength => 60, :size => 60 %>
            </td>
          </tr>
          <tr>
            <td>Locations</td>
            <td colspan="2">
              <%= f.select :location_ids, options_from_collection_for_select(@locations, 'id', 'name', @selected_location_ids), {}, {:multiple => true} %>
	          </td>
	        </tr>
	        <tr>
	          <td class="<%= "#{@pc_complete}" %>" >Place Categories</td>
		        <td>
              <%= f.select :place_category_ids, options_from_collection_for_select(@place_categories, 'id', 'name', @selected_place_category_ids), {},
                              {:multiple => true} %>
            </td>
          </tr>
          <tr>
            <td>Story Categories</td>
            <td>
              <%= f.select :story_category_ids, options_from_collection_for_select(@story_categories, 'id', 'name', @selected_story_category_ids), {}, {:multiple => true} %>
            </td>
            <td></td>
          </tr>
          <tr>
            <td>Scraped Type</td>
            <td><%= f.text_field :scraped_type, :value => @meta_type, size:20, :readonly => true %>&nbsp;&nbsp;&nbsp;Story Type
              <%= f.select :story_type, ["Magazine", "Newspaper", "Blog", "Internet", "Television", "Wheres URL Original",
                                         "Promotional", "Collection", "Affiliate", "CVB Publication", "Film", "Radio",
                                         "Guide", "Hotel Guide", "Book", "Industry Awards"] %></td>
          </tr>
          <tr>
            <td>Story Author</td>
            <td><%= f.text_field :author, :value => @meta_author, :size => 50 %>&nbsp;&nbsp;&nbsp;&nbsp;
            Outside USA?&nbsp;&nbsp;
            <%= f.check_box :outside_usa, :value => @outside_usa %></td>
          </tr>
          <tr>
            <td>Story Date</td>
            <td><%= f.number_field :story_year, :value => @year, :placeholder => "yyyy", in: 2000...2020, :style => "text-align: center", class: "#{@date_complete}" %>
              <%= f.number_field :story_month, :value => @month, :placeholder => "mm", in: 1...13, :style => "text-align: center", class: "#{@date_complete}"  %>
              <%= f.number_field :story_date, :value => @day, :placeholder => "dd", in: 1...32, :style => "text-align: center", class: "#{@date_complete}" %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    SAP Publish Date–Time&nbsp;&nbsp;&nbsp;
                    <%= f.datetime_select :sap_publish_date, use_month_numbers: true, start_year: 2014, include_blank: true %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</td>
          </tr>
	        <tr>
		        <td>
		          <%= f.submit "Save", class: 'btn btn-sm btn-success' %>
		        </td>
	          <% if params[:action] != 'new' %>
		          <td class="<%= "#{@story_complete == true ? 'complete' : 'incomplete'}" %>" >
	              <%= @story_complete == true ? "Story Complete" : "Incomplete Story – Missing Fields In Yellow" %>
	            </td>
	          <% end %>
	        </tr>
          <%= f.hidden_field :raw_author_scrape, :value => @meta_author %>
          <%= f.hidden_field :data_entry_begin_time, :value => @data_entry_begin_time %>
          <%= f.hidden_field :raw_story_year_scrape, :value => @year %>
          <%= f.hidden_field :raw_story_month_scrape, :value => @month %>
          <%= f.hidden_field :raw_story_date_scrape, :value => @day %>
          <%= f.hidden_field :data_entry_user, :value => current_user.id %>
        </table>
      </div></div>

    <iframe class="embed-responsive-item" sandbox="allow-same-origin allow-forms allow-scripts" src="<%= @full_web_url %>" frameborder="3" width="100%" height="900px">error!</iframe>
<% end %>
