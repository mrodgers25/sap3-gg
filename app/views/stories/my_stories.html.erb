<div class="container-sm">
  <div class="jumbotron bg-white my-stories">
    <div class="header text-center">
      <h4><i class="fas fa-list mr-1"></i> My Stories</h4>
    </div>

    <hr class="my-4">

    <%= render partial: 'filters', locals: { filter_path: my_stories_path } %>

    <hr class="my-4">

    <div class="table-div">
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th scope="col">Image</th>
            <th scope="col">Title</th>
            <th scope="col">Published</th>
            <th scope="col">Saved On</th>
            <th scope="col">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @stories.each do |story| %>
            <tr>
              <td class="story-image">
                <%= link_to image_tag(story.latest_image.src_url, class: "grid-image"), story_path(story.permalink), target: '_blank' %>
              </td>
              <td style="width: 600px;"><%= link_to story.latest_url&.url_title, story.latest_url&.encoded_url, target: '_blank', class: 'text-dark' %></td>
              <td style="width: 200px;"><%= story.media_owner_and_date_line || '-' %></td>
              <td style="width: 100px;"><%= story.save_date.strftime("%-m/%d/%Y") || '-' %></td>
              <td style="width: 100px;">
                <%= link_to story_path(story.permalink), class: "btn btn-sm btn-outline-primary m-1 w-100", target: '_blank' do %>
                  <i class="fas fa-search mr-1"></i> View
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
