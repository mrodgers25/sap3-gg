<% if @story.type == 'MediaStory' %>
  <%= render partial: 'shared/media_stories/show', locals: { story: @story } %>
<% elsif @story.type == 'VideoStory' %>
  <%= render partial: 'shared/video_stories/show', locals: { story: @story } %>
<% else %>
  <%= render partial: 'shared/custom_stories/show', locals: { story: @story, scope: nil } %>
<% end %>
